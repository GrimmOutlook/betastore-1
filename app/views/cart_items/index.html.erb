<table class="table-hover">
	<th><h4>Your Cart</h4></th>
	<tr>
		<th>Product</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<% @cart_items.each do |cart_item| %>
		<tr>
			<td class="product"><%= cart_item.product.name %></td>
			<td><%= cart_item.quantity %></td>
			<td><%= cart_item.product.price %></td>
		</tr>
	<% end %>
	<tr>
		<td><%= link_to "Checkout", checkout_path, class: 'btn btn-success' %></td>
	</tr>
</table>