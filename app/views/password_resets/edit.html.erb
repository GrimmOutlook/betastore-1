<h1>Change Your Password</h1>

<% if @password_reset.errors.present? %>
	<% @password_reset.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
<% end %>

<%= form_tag do %>
	<label>
		New Password:
		<%= password_field_tag :password %>
	</label>

	<%= submit_tag "Change Password", :class => "btn btn-default" %>

<% end %>